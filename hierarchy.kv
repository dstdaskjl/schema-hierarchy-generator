<CustomPopup@Popup>:
    size_hint: 0.5, 0.8
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    description: ''
    title_font: 'Montserrat-Medium.ttf'
    title_size: 17

    ScrollView:
        pos_hint: {'x': 0, 'y': 0}
        do_scroll_x: True
        do_scroll_y: True
        margin: 10

        Label:
            text: root.description
            size_hint: None, None
            size: self.texture_size
            font_name: 'Montserrat-Medium.ttf'
            font_size: 15
            padding: 15, 10

<Hierarchy>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        id: search
        size_hint: 1, 1
        pos_hint: {'x': 0, 'y': 0}

        TextInput:
            id: search_input
            hint_text: 'Type Schema Name To Search'
            size_hint: 0.2, 0.05
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            padding: 10, (self.height - self.font_size) / 2.5
            halign: 'center'
            on_text: root.on_text_search_input(self)

        ScrollView:
            size_hint: 0.2, 0.6
            pos_hint: {'center_x': 0.5, 'y': 0.2}
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: search_result
                size_hint: 1, None
                height: self.minimum_height
                cols: 1

    BoxLayout:
        id: tree
        pos_hint: {'x': 1, 'y': 0}
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: 50
            spacing: 20

            Button:
                size_hint: None, None
                size: 50, 50
                background_normal: 'back.png'
                background_down: 'back.png'
                border: 0, 0, 0, 0
                on_release: root.on_release_back_button(self)

            Button:
                text: 'SHOW'
                color: 0, 0, 0, 1
                font_size: 30
                size_hint: None, None
                size: 100, 50
                background_normal: ''
                background_down: ''
                border: 0, 0, 0, 0
                on_release: root.on_release_show_button(self)

            Button:
                text: 'HIDE'
                color: 0, 0, 0, 1
                font_size: 30
                size_hint: None, None
                size: 100, 50
                background_normal: ''
                background_down: ''
                border: 0, 0, 0, 0
                on_release: root.on_release_hide_button(self)

        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            GridLayout:
                id: tree_layout
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                cols: 1
                spacing: 100
                padding: 10, 10